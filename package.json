{
  "name": "taxes",
  "version": "0.1.0",
  "description": "US federal income tax visualization",
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --format=esm --minify --outdir=docs --sourcemap --splitting --target=es6",
    "compile": "tsc --noEmit --project tsconfig.test.json",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint . --cache --ext .js,.ts,.tsx",
    "serve": "esbuild src/index.tsx --bundle --format=esm --outdir=docs --servedir=docs --sourcemap --splitting --target=esnext",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kddnewton/taxes.git"
  },
  "author": "Kevin Newton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kddnewton/taxes/issues"
  },
  "homepage": "https://github.com/kddnewton/taxes#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@types/react": "^18.0.13",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "esbuild": "^0.14.45",
    "esbuild-css-modules-plugin": "^2.3.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "tsconfig.test.json"
    },
    "plugins": [
      "jsx-a11y",
      "import",
      "react",
      "react-hooks",
      "@typescript-eslint"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts",
            ".tsx",
            ".d.ts"
          ]
        }
      },
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "react/prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "eslintIgnore": [
    "/coverage/",
    "/docs/"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "coverage/**/*.css",
      "docs/**/*.css"
    ]
  }
}
