{
  "name": "taxes",
  "version": "0.1.0",
  "description": "US federal income tax visualization",
  "type": "module",
  "scripts": {
    "build": "node bin/build.mjs",
    "compile": "tsc --noEmit --project tsconfig.test.json",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint . --cache",
    "serve": "node bin/serve.mjs",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kddnewton/taxes.git"
  },
  "author": "Kevin Newton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kddnewton/taxes/issues"
  },
  "homepage": "https://github.com/kddnewton/taxes#readme",
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.4",
    "esbuild": "^0.27.0",
    "esbuild-css-modules-plugin": "^3.1.5",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "coverage/**/*.css",
      "docs/**/*.css"
    ]
  }
}
